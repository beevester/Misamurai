<form action="{{path('store.nominee')}}" method="POST">
  <div class="form-group">
    <input type="hidden" name="user" value="{{app.user.username}}">
    <label>Nominee</label>
    <input name="nominee" type="text" class="form-control" placeholder="Enter Nominee" v-model="nomineeInput">
      <div v-for="user in filteredList" style="z-index: 100;">
        <a href="#">${user.username}</a>
      </div>

  </div>
  <div class="form-group">
    <label>Comment</label>
    <textarea type="textarea" class="form-control" name="comment" placeholder="Write a comment"></textarea>
  </div>
  <button class="btn btn-primary" type="submit">Submit</button>
</form>
