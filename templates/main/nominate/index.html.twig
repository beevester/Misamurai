<!-- loads the nomination -->
{% extends '_includes/nav/main.html.twig'%}

<div class="container-fluid">
  <div class="row">
      {% for i in 0..10 %}
      <div class="col-sm-3" style="margin-top: 20px">
        <div class="card">
          <div class="card-img">
            <div class="container" style="width:100%; padding-left: 0px; padding-right: 0px">
              <img src="{{ asset('images/catwoman.jpg')}}" alt="Avatar" class="image" >
              <div class="middle">
                <div class="">
                  <a href="#">Vote</a>
                </div>
                </div>
            </div>
          </div>
          <div class="card-body">
            <h5 class="card-title">Special title treatment</h5>
            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
            <a href="#" class="btn btn-primary">Go somewhere</a>
            <br>
            <br>
            {% for i in 0..5 %}

            <a href="#"><img src="{{ asset('images/batman.png')}}" alt="Avatar" class="avatar"></a>
            {% endfor %}
          </div>
        </div>
      </div>
      {% endfor %}
  </div>
</div>
<!-- end of the load for nomination -->


<style>
.container {
position: relative;
width: 50%;
}

.image {
opacity: 1;
display: block;
width: 100%;
height: auto;
transition: .5s ease;
backface-visibility: hidden;
}

.avatar {
    vertical-align: middle;
    width: 50px;
    height: 50px;
    border-radius: 50%;
}

.middle {
transition: .5s ease;
opacity: 0;
position: absolute;
top: 50%;
left: 50%;
transform: translate(-50%, -50%);
-ms-transform: translate(-50%, -50%);
text-align: center;
}

.container:hover .image {
opacity: 0.3;
}

.container:hover .middle {
opacity: 1;
}

.text {
background-color: #4CAF50;
color: white;
font-size: 16px;
padding: 16px 32px;
}
</style>
